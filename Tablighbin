    const tg = window.Telegram.WebApp;

    // ارسال دیتا به ربات هنگام کلیک روی دکمه
    document.getElementById('collectPointsBtn').addEventListener('click', () => {
      tg.sendData('user_clicked_ad');
      alert('امتیاز شما ثبت شد!');
